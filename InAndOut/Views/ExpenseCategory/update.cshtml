@model ExpenseCategory
@{
    ViewData["Title"] = "Create New Expense Category";
}

<form method="post" asp-action="Update">
    <div class="border p-3">
        <!--<div asp-validation-summary="All" class="text-danger"></div>-->
        <input asp-for="Id" hidden/>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add New Expense Category</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        Must Expense
                    </div>
                    <div class="col-4">
                        Nice To HaveExpense
                    </div>
                    <div class="col-4">
                        Total Useless Expenses
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update Expenses" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
