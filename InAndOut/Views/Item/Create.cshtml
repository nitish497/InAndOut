@model Item
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                       Item Name
                    </div>
                    <div class="col-4">
                        Borrower
                    </div>
                    <div class="col-4">
                        Lender
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemName" class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input asp-for="Borrrower" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Lender" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col">
                            <input  type="submit" class="btn btn-info w-75" value="Craete"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75" >Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

